@model BSG.ADInventory.Entities.Car
@using BSG.ADInventory.Resources
@{ViewBag.EntityName = "Car";}

@using (Ajax.BeginForm("SetCrudAction", "Car", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "partialForm" }))
{
    <div id="partialForm">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.CreateTime)
            @Html.HiddenFor(model => model.LastUpdateTime)
            @Html.HiddenFor(model => model.CreateUserId)
            @Html.HiddenFor(model => model.LastUpdateUserId)
            @Html.Partial("CreateOrEdit", Model)
        </div>
    </div>

}
