@model BSG.ADInventory.Models.User.UserRoleModel
@using BSG.ADInventory.Resources
@{ ViewBag.EntityName = "User";}
@using (Ajax.BeginForm("SetCrudAction", "User", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "partialForm" }))
{
    <div id="partialForm">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.CreateTime)
            @Html.HiddenFor(model => model.LastUpdateTime)            
            @Html.Partial("CreateOrEdit", Model)
        </div>
    </div>

}

