@model string
@{
    var formName = ViewData.TemplateInfo.HtmlFieldPrefix;
}
<div class="input-group input-group-sm">    
    @this.Html.TextBoxFor(model => model, new { @class = "form-control",@style= "height:25px; padding-top:0px; padding-botton:0px; border-bottom-right-radius:4px; border-top-right-radius:4px" })
    <span class="input-group-append">
        <button type="button" class="btn btn-default btn-xs" id="Search_@formName" style="height:25px; "><i class="fas fa-search fa-fade"></i></button>
    </span>
</div>



