@model BSG.ADInventory.Entities.MatGroup
@using BSG.ADInventory.Resources
@{ViewBag.EntityName = "MatGroup";}
@if (ViewBag.Result == true)
{
    <script>
                $('#modal-content').modal('toggle');
                toastr.success('@Resource.DataSavedSuccessfully');
        $('#jstree-@ViewBag.EntityName').jstree(true).refresh();
    </script>
}
else
{
    <div class="form-group">
        <div class="row">

            <div class="editor-label-field col-md-6">
                <div class="requiredlable">
                    @this.Html.LabelFor(model => model.Title, new { @class = "required" })
                </div>
                <div class="editor-field">
                    @this.Html.EditorFor(model => model.Title)
                    @this.Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>

            <div class="editor-label-field col-md-6">
                <div class="requiredlable">
                    @this.Html.LabelFor(model => model.ParentMatGroupId)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.ParentMatGroupId, (SelectList)this.ViewBag.ParentMatGroupIds, Resource.Select, new { id = "MatGroupId", @class = "select2 form-control" })
                    @this.Html.ValidationMessageFor(model => model.ParentMatGroupId)
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">
                <hr />
                <button type="submit" class="btn btn-default btn-sm"><span class="fal fa-check fa-md text-green"></span> @Resource.Save</button>
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal"><span class="fal fa-times la-md text-red"></span> @Resource.Close </button>
            </div>
        </div>
    </div>
}

