@model BSG.ADInventory.Models.Account.ChangePasswordModel
@using BSG.ADInventory.Resources



@if (ViewBag.Result == true)
{
    <script>

                toastr.success('@ViewBag.ErrorMessage');
                
    </script>
}

    <div class="form-group">
        <div class="row">


            <div class="editor-label-field col-md-4">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <img src="~/Content/dist/img/reset-password-animate.svg" style="max-width:300px" />
                    </div>
                    <div class="editor-label-field col-md-12">
                        <div class="requiredlable">
                            @this.Html.LabelFor(model => model.OldPassword, new { @class = "required" })
                        </div>
                        <div class="editor-field">
                            @this.Html.PasswordFor(model => model.OldPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.OldPassword)
                        </div>
                    </div>

                    <div class="editor-label-field col-md-12">
                        <div class="requiredlable">
                            @this.Html.LabelFor(model => model.NewPassword, new { @class = "required" })
                        </div>
                        <div class="editor-field">
                            @this.Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.NewPassword)
                        </div>
                    </div>

                    <div class="editor-label-field col-md-12">
                        <div class="requiredlable">
                            @this.Html.LabelFor(model => model.ConfirmPassword, new { @class = "required" })
                        </div>
                        <div class="editor-field">
                            @this.Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                    </div>

                </div>
            </div>
            <div class="editor-label-field col-md-8">
                
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <hr />
                <button type="submit" class="btn btn-default btn-sm"><span class="fal fa-check fa-md text-green"></span> @Resource.Save</button>
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal"><span class="fal fa-times la-md text-red"></span> @Resource.Close </button>
            </div>
        </div>
    </div>


