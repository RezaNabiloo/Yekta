@model BSG.ADInventory.Models.Country.CountryCEDTO
@using BSG.ADInventory.Resources
@{ViewBag.EntityName = "Country";}

@using (Ajax.BeginForm("SetCrudAction", "Country", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = ViewBag.EntityName }))

{
    <div id="@ViewBag.EntityName">    
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.Partial("CreateOrEdit", Model)
        </div>
    </div>

}
