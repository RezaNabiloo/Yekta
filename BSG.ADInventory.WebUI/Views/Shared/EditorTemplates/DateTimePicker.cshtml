@model DateTime?
@{
    var formName = ViewData.TemplateInfo.HtmlFieldPrefix;
}

<div class="input-group">
    @*<input type="text" id="@formName" name="@formName" class="form-control" value="@(Model==null?"":Model.Value.ToLongDateString())" autocomplete="off"/>*@
    <input type="text" id="@formName" name="@formName" class="form-control" value="@(Model==null?"":Model.Value.ToString("yyyy/MM/dd HH:mm:ss"))" autocomplete="off"/>
    <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroupButton_@formName">
            <i class="fal fa-calendar-alt"></i>
        </span>
    </div>
</div>
    
<script type="text/javascript">
    $('#inputGroupButton_@formName').on('click', function () {$('#@formName').trigger('click')});
    $(document).ready(function () {
        $('#@formName').persianDatepicker({
            autoClose: true,
            format: 'YYYY/MM/DD HH:mm:ss',
            observer: true,
            initialValueType: 'persian',
            initialValue: !1,
            timePicker: {
                enabled: true
            },
            toolbox: {
                calendarSwitch: {
                    enabled: false
                }
            },
            onSelect: function (params) {
                valOf = $(this.model.inputElement).val();
                $(this.model.inputElement).val(valOf.toEnglishDigits());
            }
        });
    });
</script>
